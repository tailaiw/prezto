# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
export GPG_TTY=$(tty)

mkpythondir() {
  if [ ! -d "$(pwd)/$1" ]
  then
    # mkdir "$1"
    rsync -r ~/git/python-boilerplate/ "$1" --exclude=".git"
  else
    echo "Directory $(pwd)/$1 already exists"
  fi
}
alias update='sudo apt update; sudo apt upgrade -y; sudo apt autoremove -y; sudo apt autoclean -y'

# pyenv
eval "$(pyenv init -)"

# Created by `pipx` on 2021-07-20 00:55:10
export PATH="$PATH:/home/tailaiw/.local/bin"

# pipx completions
autoload -U bashcompinit
bashcompinit
eval "$(register-python-argcomplete pipx)"
